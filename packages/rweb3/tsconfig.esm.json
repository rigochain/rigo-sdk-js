{
	"compilerOptions": {
		"target": "es2016",
		"module": "es2020",
		"outDir": "./lib/esm",
		"moduleResolution": "node",
		//"strict": true /* Enable all strict type-checking options. */,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}
